function doneTask1(){
    sessionStorage.setItem("task1_done","1");

    msg.textContent = TEXT.task1_complete_msg[userLang];
    msg.classList.add("show","ok");

    nextBtn.classList.remove("disabled");
    nextBtn.onclick = ()=> location.href="task2.html";
}
